{
    "name": "spatie/mailcoach",
    "type": "project",
    "description": "Self-host Mailcoach",
    "keywords": [
        "mailcoach",
        "spatie"
    ],
    "repositories": [
        {
            "type": "composer",
            "url": "https://satis.spatie.be"
        }
    ],
    "require": {
        "php": "^8.3",
        "ext-exif": "*",
        "ext-fileinfo": "*",
        "ext-gd": "*",
        "ext-imagick": "*",
        "ext-intl": "*",
        "ext-redis": "*",
        "guzzlehttp/guzzle": "^7.9.2",
        "laravel/framework": "^11.35",
        "laravel/horizon": "^5.30.0",
        "laravel/sanctum": "^4.0.6",
        "laravel/tinker": "^2.10",
        "spatie/laravel-mailcoach": "^8.13.0",
        "symfony/mailer": "^7.2.0"
    },
    "require-dev": {
        "fakerphp/faker": "^1.24.1",
        "laravel/pint": "^1.18.3",
        "laravel/sail": "^1.39.1",
        "mockery/mockery": "^1.6.12",
        "nunomaduro/collision": "^8.5",
        "phpunit/phpunit": "^11.5.2",
        "spatie/laravel-ignition": "^2.9"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/",
            "Database\\Factories\\": "database/factories/",
            "Database\\Seeders\\": "database/seeders/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "post-autoload-dump": [
            "Illuminate\\Foundation\\ComposerScripts::postAutoloadDump",
            "@php artisan package:discover --ansi",
            "@php artisan mailcoach:publish"
        ],
        "post-update-cmd": [
            "@php artisan vendor:publish --tag=laravel-assets --ansi --force"
        ],
        "post-root-package-install": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\"",
            "@php -r \"rename('.gitignore.example', '.gitignore');\""
        ],
        "post-create-project-cmd": [
            "@php artisan key:generate --ansi",
            "@php artisan mailcoach:publish",
            "@php artisan vendor:publish --tag=mailcoach-migrations"
        ],
        "predeploy": [
            "@php artisan storage:link --force"
        ],
        "postdeploy": [
            "@php artisan optimize",

            "@php artisan migrate --force --isolated"
        ]
    },
    "extra": {
        "laravel": {
            "dont-discover": []
        }
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
